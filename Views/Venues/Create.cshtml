@model BoardroomBooking4.Models.Venue
@{
    ViewData["Title"] = "Add Venue";
}

<!-- ─── Page header ─────────────────────────────────────────────── -->
<div class="d-flex align-items-center mb-4">
    <h1 class="h3 mb-0">
        <i class="bi bi-plus-square-dotted me-2 text-success"></i>
        Add venue
    </h1>
</div>

<!-- ─── Form card ───────────────────────────────────────────────── -->
<form asp-action="Create"
      method="post"
      class="card border-0 shadow-sm rounded-4">

    <div class="card-body p-4">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="row g-3">

            <!-- Name ------------------------------------------------>
            <div class="col-md-6">
                <label asp-for="Name" class="form-label fw-semibold"></label>
                <input asp-for="Name"
                       class="form-control form-control-lg rounded-3" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <!-- Capacity -------------------------------------------->
            <div class="col-md-3">
                <label asp-for="Capacity" class="form-label fw-semibold"></label>
                <input asp-for="Capacity"
                       type="number" min="1"
                       class="form-control rounded-3" />
                <span asp-validation-for="Capacity" class="text-danger small"></span>
            </div>

            <!-- Location -------------------------------------------->
            <div class="col-md-6">
                <label asp-for="Location" class="form-label fw-semibold"></label>
                <input asp-for="Location"
                       class="form-control rounded-3" />
                <span asp-validation-for="Location" class="text-danger small"></span>
            </div>

        </div> <!-- /row -->
    </div>

    <!-- ─── Footer / buttons ────────────────────────────────────── -->
    <div class="card-footer bg-white border-0 px-4 pb-4 pt-3">
        <div class="d-flex gap-2">
            <button class="btn btn-success rounded-pill px-4">
                <i class="bi bi-check-circle me-1"></i>
                Save
            </button>

            <a asp-action="Index"
               class="btn btn-outline-secondary rounded-pill px-4">
                Cancel
            </a>
        </div>
    </div>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
