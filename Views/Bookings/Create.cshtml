@model BoardroomBooking4.ViewModels.BookingCreateViewModel
@using BoardroomBooking4.Models
@{
    ViewData["Title"] = "New Booking";
    var venues = (IEnumerable<Venue>)ViewData["Venues"]!;
    var allDays = Enum.GetValues<DayOfWeek>();
}

<!-- ─── Header ───────────────────────────────────────────────────── -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 m-0">
        <i class="bi bi-calendar-plus-fill text-primary me-2"></i>@ViewData["Title"]
    </h1>
    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">
        <i class="bi bi-arrow-left"></i> Back
    </a>
</div>

<!-- ─── Form card ────────────────────────────────────────────────── -->
<form asp-action="Create" method="post" class="card border-0 shadow-sm rounded-4" autocomplete="off">
    <div class="card-body p-4">

        <!-- Model + field errors (e.g., Start < End, overlap) -->
        <div asp-validation-summary="All" class="alert alert-danger rounded-3 mb-4" role="alert"></div>

        <div class="row g-4">

            <!-- Venue ------------------------------------------------>
            <div class="col-lg-6">
                <label asp-for="VenueId" class="form-label fw-semibold">Venue</label>
                <select asp-for="VenueId"
                        asp-items="@(new SelectList(venues, nameof(Venue.Id), nameof(Venue.Name)))"
                        class="form-select rounded-pill py-2">
                    <option value="">-- choose venue --</option>
                </select>
                <span asp-validation-for="VenueId" class="text-danger small"></span>
            </div>

            <!-- Title ----------------------------------------------->
            <div class="col-lg-6">
                <label asp-for="Title" class="form-label fw-semibold"></label>
                <input asp-for="Title" class="form-control rounded-pill py-2"
                       placeholder="Marketing strategy session" />
                <span asp-validation-for="Title" class="text-danger small"></span>
            </div>

            <!-- Start / End ----------------------------------------->
            <div class="col-md-6">
                <label asp-for="StartUtc" class="form-label fw-semibold">Start&nbsp;(local time)</label>
                <div class="input-group rounded-pill">
                    <span class="input-group-text"><i class="bi bi-clock"></i></span>
                    <input asp-for="StartUtc" type="datetime-local"
                           asp-format="{0:yyyy-MM-ddTHH:mm}"
                           class="form-control border-start-0" />
                </div>
                <span asp-validation-for="StartUtc" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="EndUtc" class="form-label fw-semibold">End&nbsp;(local time)</label>
                <div class="input-group rounded-pill">
                    <span class="input-group-text"><i class="bi bi-clock-history"></i></span>
                    <input asp-for="EndUtc" type="datetime-local"
                           asp-format="{0:yyyy-MM-ddTHH:mm}"
                           class="form-control border-start-0" />
                </div>
                <span asp-validation-for="EndUtc" class="text-danger small"></span>
            </div>

            <!-- Description ----------------------------------------->
            <div class="col-12">
                <label asp-for="Description" class="form-label fw-semibold"></label>
                <textarea asp-for="Description" rows="3" class="form-control rounded-4"
                          placeholder="Optional agenda or notes"></textarea>
                <span asp-validation-for="Description" class="text-danger small"></span>
            </div>

            <!-- Repeat (Recurrence) --------------------------------->
            <div class="col-12">
                <hr />
                <h5 class="mb-3">Repeat</h5>

                <div class="row g-3 align-items-end">
                    <!-- Frequency -->
                    <div class="col-md-4">
                        <label asp-for="Frequency" class="form-label fw-semibold">Frequency</label>
                        <select asp-for="Frequency" class="form-select rounded-pill py-2" id="freq">
                            <option value="0">None (one-time)</option>
                            <option value="1">Daily</option>
                            <option value="2">Weekly</option>
                            <option value="3">Monthly</option>
                        </select>
                        <span asp-validation-for="Frequency" class="text-danger small"></span>
                    </div>

                    <!-- Interval -->
                    <div class="col-md-2">
                        <label asp-for="Interval" class="form-label fw-semibold">Every</label>
                        <input asp-for="Interval" type="number" min="1" class="form-control rounded-pill py-2" />
                        <div class="form-text">Units depend on Frequency</div>
                        <span asp-validation-for="Interval" class="text-danger small"></span>
                    </div>

                    <!-- Count -->
                    <div class="col-md-3">
                        <label asp-for="Count" class="form-label fw-semibold">Occurrences</label>
                        <input asp-for="Count" type="number" min="1" class="form-control rounded-pill py-2" />
                        <div class="form-text">Leave empty if using “Until”</div>
                        <span asp-validation-for="Count" class="text-danger small"></span>
                    </div>

                    <!-- Until -->
                    <div class="col-md-3">
                        <label asp-for="UntilUtc" class="form-label fw-semibold">Until (optional, UTC)</label>
                        <input asp-for="UntilUtc" type="datetime-local"
                               asp-format="{0:yyyy-MM-ddTHH:mm}"
                               class="form-control rounded-pill py-2" />
                        <span asp-validation-for="UntilUtc" class="text-danger small"></span>
                    </div>
                </div>

                <!-- Weekly days (visible only when Frequency = Weekly) -->
                <div class="mt-3" id="weeklyDays" style="display:none;">
                    <label class="form-label fw-semibold me-2">Days of week:</label>
                    <div class="d-flex flex-wrap gap-2">
                        @foreach (var d in allDays)
                        {
                            <label class="form-check form-check-inline">
                                <!-- name matches VM: List<DayOfWeek> WeeklyDays -->
                                <input class="form-check-input" type="checkbox" name="WeeklyDays" value="@((int)d)">
                                <span class="form-check-label">@d</span>
                            </label>
                        }
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- Footer buttons --------------------------------------------->
    <div class="card-footer bg-white border-0 p-4 text-end">
        <button class="btn btn-primary rounded-pill px-4">
            <i class="bi bi-save me-1"></i>Create
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 ms-2">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const freq = document.getElementById('freq');
        const weekly = document.getElementById('weeklyDays');

        function toggleWeekly() {
            weekly.style.display = (freq.value === '2') ? 'block' : 'none';
        }
        freq.addEventListener('change', toggleWeekly);
        toggleWeekly();
    </script>
    <style>
        /* subtle anim hover */
        .card:hover {
            transform: translateY(-2px);
            transition: .2s ease;
        }
    </style>
}
